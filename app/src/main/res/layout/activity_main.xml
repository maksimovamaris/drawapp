<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/layout_margin"
        android:orientation="horizontal"
        android:adjustViewBounds="true"
        android:divider="@drawable/separator"
        android:dividerPadding="@dimen/divider_padding">

    <ImageButton
        android:id="@+id/clearButton"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_weight="1"
        android:src="@drawable/clear_icon"
        >
    </ImageButton>

    <ImageButton
        android:id="@+id/rectangleButton"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_weight="1"
        android:src="@drawable/rect_icon"

        >
    </ImageButton>
        <ImageButton
            android:id="@+id/penButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_weight="1"
            android:src="@drawable/pen_icon"
            >
        </ImageButton>

        <ImageButton
            android:id="@+id/gestureButton"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_weight="1"
            android:src="@drawable/gesture_icon"
            >
        </ImageButton>

    </LinearLayout>
    <GridView
        android:id="@+id/palletGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin"
        android:columnWidth="@dimen/column_width"
        android:layout_gravity="bottom"
        android:horizontalSpacing="@dimen/horizontal_spacing"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/vertical_spacing" />


    <com.example.drawapp.DrawView
        android:id="@+id/drawView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_view"
        android:layout_marginBottom="@dimen/margin_view"/>



</FrameLayout>

